---
// import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
}

// const cononicalURL = new URL(Astro.url.pathname, Astro.site);
const cononicalURL = "https://ryoooun-blog-ryoooun.vercel.app/";
const { title, description } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="icon" href="/favicon.ico" />
<meta name="ganerator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={cononicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-4KCRDXYFQT"
></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "G-4KCRDXYFQT");
</script>

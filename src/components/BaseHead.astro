---
// import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
  ogp: string;
}

// const cononicalURL = new URL(Astro.url.pathname, Astro.site);
const cononicalURL = "https://komogomo.vercel.app/";
const ogpImageURL = new URL('img/skill.png', cononicalURL)

const { title, description, ogp } = Astro.props;
const url = "https://komogomo.vercel.app/"
---


<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="icon" href="/favicon.ico" />
<meta name="ganerator" content={Astro.generator} />
<meta property="og:image" content=`${ogp ? ogp : ogpImageURL}` />
<meta property="og:title" content=`${title} 未経験が目指すWeb系プログラマーへの雑記` />
<meta property="og:url" content={url}>
<meta property="og:description" content={description}>
<meta property="og:type" content="blog">
<meta property="og:site_name" content="komogomo 未経験が目指すWeb系プログラマーへの雑記">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@ryoooun214">
<meta name="twitter:image" content=`${ogp ? ogp : ogpImageURL}`>
<!-- Canonical URL -->
<link rel="canonical" href={cononicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-4KCRDXYFQT"
></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "G-4KCRDXYFQT");
</script>

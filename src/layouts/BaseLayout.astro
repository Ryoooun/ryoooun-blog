---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "@fontsource/noto-sans-jp";

const { title, description, ogp, url, visiable} = Astro.props;
---

<html lang="ja">
  <head>
    <BaseHead title={title} description={description} ogp={ogp} />
  </head>
  <body class="sm:max-w-4xl md:max-w-6xl sm:mx-auto relative h-max">
    <Header />
        <slot />
    <Footer title={title} url={url} visiable={visiable}>
  </body>
</html>
